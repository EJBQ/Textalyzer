<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whitaker_iacob.textalyzer"
    android:versionCode="4"
    android:versionName="3.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.whitaker.textalyzer.util.TextalyzerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.whitaker.textalyzer.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.whitaker.textalyzer.OpenSourceActivity"
            android:configChanges="screenSize"
            android:screenOrientation="nosensor"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name="com.whitaker.textalyzer.DetailActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.whitaker.textalyzer.GeneralActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.whitaker.textalyzer.AboutActivity"
            android:configChanges="screenSize"
            android:screenOrientation="nosensor"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" />
        <activity
            android:name="com.whitaker.textalyzer.SplashScreenActivity"
            android:screenOrientation="nosensor"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>